<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When item pressed this item will be triggered -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@null"/>
                    <corners android:radius="7dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="3px" >
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="@color/green_white"
                        android:endColor="@color/green_white"
                        android:angle="270" />
                    <corners
                        android:radius="8dp"/>
                    <padding
                        android:left="10dp"
                        android:top="4dp"
                        android:right="5dp"
                        android:bottom="7dp"/>
                </shape>
            </item>
        </layer-list></item>
    <!-- By default the background will be this item -->
    <item android:state_enabled="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape >
                    <solid android:color="@color/shadow"/>
                    <!-- alttan gölge -->
                    <corners android:radius="7dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                android:bottom="3px"
                >
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="@color/green_disable"
                        android:endColor="@color/green_disable"
                        android:angle="270" />
                    <corners
                        android:radius="8dp"/>
                    <padding
                        android:left="10dp"
                        android:top="-3dp"
                        android:right="5dp"
                        android:bottom="0dp"/>
                </shape>
            </item>

        </layer-list></item>
    <!-- By default the background will be this item -->
    <item>
        <layer-list>
            <!-- SHADOW -->
            <item >
                <shape >
                    <solid android:color="@color/shadow"/>
                    <!-- alttan gölge -->
                    <corners android:radius="7dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                android:bottom="3dp"
                >
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="@color/green"
                        android:endColor="@color/green"
                        android:angle="270" />
                    <corners
                        android:radius="8dp"/>
                    <padding
                        android:left="10dp"
                        android:top="-3dp"
                        android:right="5dp"
                        android:bottom="0dp"/>
                </shape>
            </item>

        </layer-list></item>
</selector>