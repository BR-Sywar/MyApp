<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.ui.Accueil.EntrepriseFragment"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="346dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:background="@drawable/cerclebackground"
            app:cardBackgroundColor="#2626">

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/logo_entre"
                    android:layout_width="72dp"
                    android:scaleType="fitCenter"
                    android:layout_height="95dp"
                    app:srcCompat="@drawable/phar" />

                <TextView
                    android:id="@+id/title_entre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                   android:layout_toEndOf="@+id/logo_entre"
                    android:layout_centerInParent="true"
                    android:text="Pharmacie"
                    android:textSize="30dp"
                    android:layout_toRightOf="@+id/logo_entre"
                    android:layout_marginLeft="10dp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <ListView
        android:id="@+id/list_entreprise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>