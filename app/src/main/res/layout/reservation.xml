<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/raduis_bg"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context="com.example.ui.ticket.MainReserver">

    <TextView
        android:id="@+id/text"
        android:layout_width="260dp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="Reserver Votre Ticket "
        android:textColor="@color/rose"
        android:textSize="25dp"
        android:textStyle="bold|italic" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:orientation="vertical">

                        <CheckedTextView
                            android:id="@+id/checkedTextView3"
                            android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"

                            android:background="@color/blackTextColor"
                            android:gravity="center"
                            android:text="Client" />

                        <EditText
                            android:id="@+id/Nom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/et_custom"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Nom"
                            android:inputType="textPersonName"
                            android:layout_marginBottom="4dp"
                            android:padding="10dp"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/prenom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/et_custom"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Prénom"
                            android:lines="2"
                            android:inputType="textMultiLine"
                            android:layout_marginBottom="4dp"
                            android:padding="10dp"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/et_custom"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Username"
                            android:inputType="textPersonName"
                            android:layout_marginBottom="4dp"
                            android:padding="10dp"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/tel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/et_custom"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Numéro de téléphone"
                            android:inputType="textMultiLine"
                            android:lines="2"
                            android:padding="10dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:orientation="vertical">

                        <CheckedTextView
                            android:id="@+id/checkedTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:background="@color/blackTextColor"
                            android:gravity="center"
                            android:text="Mon Service" />

                        <EditText
                            android:id="@+id/nom_entreprise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/et_custom"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Entreprise"
                            android:inputType="textPersonName"
                            android:layout_marginBottom="4dp"
                            android:padding="10dp"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/email_entreprise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/et_custom"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="E-mail"
                            android:lines="2"
                            android:inputType="textMultiLine"
                            android:layout_marginBottom="4dp"
                            android:padding="10dp"
                            android:textSize="12sp" />


                        <EditText
                            android:id="@+id/tel_entreprise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/et_custom"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Télephone"
                            android:inputType="textPersonName"
                            android:layout_marginBottom="4dp"
                            android:padding="10dp"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/adress_entreprise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/et_custom"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Adresse"
                            android:lines="2"
                            android:inputType="textMultiLine"
                            android:layout_marginBottom="7dp"
                            android:padding="10dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/date"
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_custom"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Date de réservation"
                    android:inputType="textPersonName"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:textSize="15sp"
                    />
                    <ImageView
                        android:id="@+id/img_date"
                        android:background="@drawable/ic_baseline_calendar_today_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/heure"
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:background="@drawable/et_custom"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Heure de réservation"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/img_hour"
                    android:background="@drawable/ic_baseline_access_time_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_reserve"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"

                android:layout_marginBottom="20dp"
                android:height="20dp"
                android:background="@drawable/buttonstyle"
                android:fontFamily="@font/roboto_regular"
                android:text="Réserver"
                android:textColor="#000" />

            <Button
                android:id="@+id/annuler"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonstyle"
                android:fontFamily="@font/roboto_regular"
                android:text="Annuler"
                android:textColor="#000" />


        </LinearLayout>


</LinearLayout>
</ScrollView>
